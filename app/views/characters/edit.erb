<br><br><br>
<h1>Edit <%= @character.name %></h1>


<div class="edit-container">
    <form action="/characters/<%=@character.id%>" method="post">
    <input type="hidden" name="_method" value="patch">
    <div class ="name-edit"><h2>Name</h2>
        <input type="text" name="character[name]" value="<%= @character.name%>"><br>
    </div>
    <div class="attribute-container">
        <div class="race-container">
            <h2>Race</h2>
            <select name="race[name]">
                <% @races.each do |race| %>
                <option value="<%=race.name%>"><%=race.name%></option>
                <% end %>
                </select>
        </div>
        <div class="klass-container">
            <h2>Class</h2>
                <select name="klass[name]">
                <% @klasses.each do |klass| %>
                <option value="<%=klass.name%>"><%=klass.name%></option>
                <% end %>
                </select>
        </div>
    </div>

    <div class="stats-container">
        <div class="health-container">
        <h2>Stats</h2>
        <label>Health Points</label><br>
        <input type="text" name="character[hp]" value="<%=@character.hp%>"><br>
        </div>
        <% @character.stats.each_slice(2) do |key, val| %>
        <div class="stats-row">
            <div class="stats-column">
                <label><%= key[0] %></label><br>
                <input type="text" name="character[<%=key[1]%>]" value="<%=@character.send(key[1])%>"><br>
            </div>
            <div class="stats-column">
                <label><%= val[0] %></label><br>
                <input type="text" name="character[<%=val[1]%>]" value="<%=@character.send(val[1])%>"><br>
            </div>
        </div>
        <% end %>
    </div>
    <br><br><br><br><br><br><br><br>
        <input type="submit" value="Save Changes">
    </form>
</div>