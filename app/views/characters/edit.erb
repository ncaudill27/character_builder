<br><br><br>
<h1>Edit <%= @character.name %></h1>


<div class="edit-container">
    <form action="/characters/<%=@character.id%>" method="post">
    <input type="hidden" name="_method" value="patch">
        <h3>Name</h3>
        <input type="text" name="character[name]" value="<%= @character.name%>"><br>
    <div class="attribute-container">
        <div class="race-container">
            <h3>Race</h3><br>
            <select name="race[name]">
                <% @races.each do |race| %>
                <option value="<%=race.name%>"><%=race.name%></option>
                <% end %>
                </select>
        </div>
        <div class="klass-container">
            <h3>Class</h3><br>
                <select name="klass[name]">
                <% @klasses.each do |klass| %>
                <option value="<%=klass.name%>"><%=klass.name%></option>
                <% end %>
                </select>
        </div>
    </div>

    <div class="stats-container">
        <h3>Stats</h3>
        <%= @character.stats.keys[0]%>
        <input type="text" name="character[@character.stats.values[0]]" value="<%=@character.send(@character.stats.values[0])%>"><br>
        <% @character.stats.each_slice(2) do |key, val| %>
        <div class="stats-row">
            
            <label><%= key[0] %></label>
            <input type="text" name="character[<%=key[1]%>]" value="<%=@character.send(key[1])%>"><br>
                <% if val %>
            <label><%= val[0] %></label>
            <input type="text" name="character[<%=val[1]%>]" value="<%=@character.send(val[1])%>"><br>
                <% end %>
            
        </div>
        <% end %>
    </div>

        <input type="submit" value="Continue">
    </form>
</div>