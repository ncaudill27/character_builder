<br><br>
<div class="character-header">
<h1><%= @character.name %></h1>
<h3><a href="/<%= @character.owner %>"><%= @character.owner %></a></h3>
</div>
<div class="character-show">
    <div class="race-klass">
    <div class="race-box">
        <h2>Race</h2>
        <h3><%= @character.race.name %></h3>
    </div>
    <div class="klass-box">
        <h2>Class</h2>
        <h3><%= @character.klass.name %></h3>
    </div>
</div>
<div class="stats-show">
    <h2>Stats</h2>
    <ul>
    <% @character.stats.each do |key, value| %>
        <li><%=key%>: <%=@character.send(value)%></li>
    <% end %>
    </ul>
</div>
    <div class="skills-container">
        <% @character.skills.each do |skill| %>
            <li><%= skill.name %></li>
        <% end %>
    </div>
    <br>
    <h5><a href="/characters/<%=@character.id%>/edit">Edit Character</a></h5>
    <br>
    <form action="/characters/<%=@character.id%>" method="post">
        <input type="hidden" name="_method" value="delete">
        <input type="submit" value="Delete <%=@character.name%>">
    </form>
</div>