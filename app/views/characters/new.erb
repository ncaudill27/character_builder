<h1>Create New Character</h1>

<div class="new-character">
<h2>Character's Details</h2>

    <form action="/characters" method="post">
        <label>Name</label><br>
            <input type="text" name="character[name]"><br>
        <label>Race:</label>
        <select name="race[name]">
            <% @races.each do |race| %>
                <option value="<%=race.name%>"><%=race.name%></option>
            <% end %>
        </select>
        <label>Class:</label>
        <select name="klass[name]">
            <% @klasses.each do |klass| %>
                <option value="<%=klass.name%>"><%=klass.name%></option>
            <% end %>
        </select>
        
    <h2>Character's Stats</h2>
        <div class="new-stats">
            <label>Health Points</label><br>
            <input type="text" name="character[hp]"><br>
        <% @character.stats.each_slice(2) do |key, val| %>
        <div class="new-columns">
            <div class="stats-rows">
                <div class="stats-column">
                    <label><%= key[0] %></label><br>
                    <input type="text" name="character[<%=key[1]%>]" value="<%=@character.send(key[1])%>"><br>
                </div>
                <div class="stats-column">
                    <label><%= val[0] %></label><br>
                    <input type="text" name="character[<%=val[1]%>]" value="<%=@character.send(val[1])%>"><br>
                </div>
            </div>
        </div>
            <!-- <label><%= key %></label><br>
            <input type="text" name="character[<%= val %>]"><br> -->
        <% end %>
        <br><br><br><br><br><br><br><br><br><br>
        <input type="submit" value="Create">
    </div>
    </form>
</div>